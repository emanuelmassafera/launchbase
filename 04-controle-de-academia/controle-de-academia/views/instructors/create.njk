{% extends "layout.njk" %}

{% block head %}{% endblock head %}

{% block content %}
    <form class="card" method="POST" action="/instructors">
        <section class="avatar" style="background: url(https://source.unsplash.com/collection/8524003/500x500) no-repeat  center center / cover"></section>
        <section class="details">
            <h3>Novo instrutor</h3>

            <div class="items">
                <div>Avatar URL</div>
                <div>
                    <input type="url" name="avatar_url" placeholder="http://">
                </div>
            </div>

            <div class="items">
                <div>Instrutor</div>
                <div>
                    <input type="text" name="name" placeholder="Nome do Instrutor">
                </div>
            </div>

            <div class="items">
                <div>Data de nascimento</div>
                <div>
                    <input type="date" name="birth">
                </div>
            </div>

            <div class="items">
                <div>Sexo</div>
                <div>
                    <span><input type="radio" name="gender" value="M" checked="checked">Masculino</span>
                    <span><input type="radio" name="gender" value="F">Feminino</span>

                </div>
            </div>

            <div class="items">
                <div>Área de atuação</div>
                <div>
                    <input type="text" name="services" placeholder="Separe os serviços prestados por vírgula">
                </div>
            </div>

            <button type="submit">Salvar</button>
        </section>
    </form>
{% endblock content %}