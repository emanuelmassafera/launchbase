{% extends "layout.njk" %}

{% block head %}
    <title>Cursos</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
{% endblock head %}

{% block content %}
    <div id="wrapper">
        <h1>Conteúdos</h1>
    </div>

    <section class="cards">
        <div class="card" id="starter">
            <div class="image">
                <img src="https://skylab.rocketseat.com.br/static/64c237ccff807c054339a62d53b4b402.svg" alt="Starter">
            </div>
            <div class="title">
                <p class="title">Starter</p>
            </div>
            <div class="info">
                <p class="modules">5 módulos</p>
                <p class="price">Gratuito</p>
            </div>

        </div>

        <div class="card" id="launchbase">
            <div class="image">
                <img src="https://skylab.rocketseat.com.br/static/0828532024cb46921a6b5e941f8d788d.svg" alt="LaunchBase">
            </div>
            <div class="title">
                <p class="title">LaunchBase</p>
            </div>
            <div class="info">
                <p class="modules">8 módulos</p>
                <p class="price">R$980,00</p>
            </div>
        </div>

        <div class="card" id="gostack">
            <div class="image">
                <img src="https://skylab.rocketseat.com.br/static/83a178a0653dab1d55e2ed7946465975.svg" alt="GoStack">
            </div>
            <div class="title">
                <p class="title">GoStack</p>
            </div>
            <div class="info">
                <p class="modules">10 módulos</p>
                <p class="price">R$1980,00</p>
            </div>
        </div>
    </section>

    <div class="modal-overlay">
        <div class="modal">
            <a class="close-modal">
                <i class="material-icons">close</i>
            </a>

            <a class="maximize-modal">
                <i class="material-icons">open_in_full</i>
            </a>

            <div class="modal-content">
                <iframe src="" frameborder="0"></iframe>
            </div>
        </div>
    </div>

    <script src="desafio.js"></script>
{% endblock content %}
